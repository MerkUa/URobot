<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contactItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/checkboxIndustry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:button="@drawable/custom_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameIndustry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NameName"
        android:padding="10dp"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/checkboxIndustry"
        app:layout_constraintStart_toEndOf="@+id/checkboxIndustry"
        app:layout_constraintTop_toTopOf="@+id/checkboxIndustry" />

</androidx.constraintlayout.widget.ConstraintLayout>